{
    "name": "aazzroy/flopy_crm",
    "description": "A lightweight Customer Relationship Management system built with PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Flopy CRM Team",
            "email": "admin@flopy.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers/session_helper.php",
            "app/helpers/url_helper.php",
            "app/helpers/security_helper.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs app",
        "fix-style": "phpcbf app"
    },
    "minimum-stability": "stable"
} 